- if current_user.likes.find_by(prototype_id: @prototype.id)
  = button_to unlike_path(@prototype), class: 'btn btn-default', method: :delete, remote: true do
    = image_tag "icon_heart_red.svg"
    Like
    %span.num
      = @prototype.likes.count
- else
  = button_to like_path(@prototype), class: 'btn btn-default', remote: true do
    = image_tag "icon_heart.svg"
    Like
    %span.num
      = @prototype.likes.count
